@Library("jenkins-shared-library")
pipeline{
    agent any
// we are deploy application  using some parameters
    parameters{
        choice(name: 'action' , choices: 'create\ndelete' , description: 'choose create/Destory')
    }

    stages{
    // how will make our stages condition using condition "choice", we use "when" block    
    // basically we need this stages only when we 'create' rather 'destory'     
        stage('gitcheckout'){
            when { expression { param.action == 'create'} }

            steps{
                script{
                    //function name
                    gitcheckout{
                        //variables : branch and url
                        branch: "main"
                        url: "https://github.com/Itz-Me-Jay/project_3.git"
                    }
                }
            }
        }
        stage('unit_test_maven'){
            
            when { expression { param.action == 'create'} }

            steps{
                script{
                    mvntest()  
                }
            }
        }
        stage('mvnintegrationTest'){

            when { expression { param.action == 'create'} }
            
            steps{
                script{
                    mvnintegrationTest()  
                }
            }
        }
        stage('statiCodeAnalyis: sonarQube'){
        
            when { expression { param.action == 'create'} }
            
            steps{
                script{
                    statiCodeAnalyis()  
                }
            }
        }

    }
}